<h1>Listing authors</h1>
 
<%= link_to 'Add author', new_author_path %>
 
<table border=1>
  <tr>
    <th>Name</th>
	<th>Homepage</th>
	<th colspan=3>Links</th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
	  <td><%= author.homepage %></td>
	  <td><%= link_to 'Show', author_path(author) %></td>
	  <td><%= link_to 'Edit', edit_author_path(author) %></td>
	  <td><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="authors/<%=author.id%>">Destroy</a></td>
    </tr>
  <% end %>
</table>